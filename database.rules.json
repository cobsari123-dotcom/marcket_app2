{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",

    "users": {
      ".indexOn": ["userType", "wishlist"]
    },
    
    "publications": {
      ".indexOn": ["sellerId"]
    },

    "products": {
      ".indexOn": ["sellerId"]
    },
    
    "orders": {
      ".indexOn": ["buyerId", "sellerId"]
    },
    
    "chat_rooms": {
      ".indexOn": "participants"
    },

    "admin_emails": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "complaints_suggestions": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "notifications": {
      ".read": "auth != null",
      ".write": "auth != null"
    }
  }
}